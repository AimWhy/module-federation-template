{
  "name": "module-federation-template",
  "description": "A dynamic, multi-environment module federation template.",
  "private": true,
  "author": "Matthew Waldron",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waldronmatt/module-federation-template.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/waldronmatt/module-federation-template/issues"
  },
  "homepage": "https://github.com/waldronmatt/module-federation-template#readme",
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1",
    "pre-push": "yarn run lint"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "lint:js": "eslint --fix .",
    "lint": "npm run lint:js",
    "commit": "git-cz",
    "dev": "kill-port 3000 && kill-port 3001 && lerna run --parallel dev",
    "prod": "kill-port 3000 && kill-port 3001 && lerna run --parallel prod",
    "build": "lerna run --parallel build",
    "bootstrap": "lerna bootstrap",
    "bootstrap:ci": "lerna bootstrap -- --frozen-lockfile --ignore-engines",
    "version:ci": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@waldronmatt/eslint-config": "^1.1.6",
    "@waldronmatt/prettier-config": "^1.2.5",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.13.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
